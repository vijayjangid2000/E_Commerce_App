<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_toLeftOf="@id/tv_popup_ofr_img"
            >
            <TextView
                android:id="@+id/tv_popup_ofr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test offer tittle"
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_popup_ofr_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="offer desc"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_popup_ofr_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="offer code"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/tv_popup_ofr_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:scaleType="center"
            android:src="@drawable/one" />


    </RelativeLayout>


</LinearLayout>